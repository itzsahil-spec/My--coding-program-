  #include <stdio.h>
  int main()
 {
 	int n,i;
 	long long factorial =1;
 	printf("enter a posetive integer");
 	scanf("%d",&n);
    if (n<0)
    {
    	printf ("we can not take out the factorial of a negative integer.\n");
	}
	else{
		for (i=1;i<=n;i++)
		{	
	factorial *=i;
		}
	printf("factorial of %d =%d\n%d\n",n,factorial);
}
	return 0;
  } 